<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gymapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Daily Workout"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.UserListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.GymActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.DietActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.UpdateUserAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="activities.DeleteUserAccountActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>